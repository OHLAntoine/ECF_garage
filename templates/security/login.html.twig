{% extends 'base.html.twig' %}

{% block title %}ðŸš—Connectez-vous ! ðŸš—{% endblock %}

{% block body %}

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey }}
        </div>
    {% endif %}
    
    <form method="post" class="mt-5 mb-5">

        <label for="username" class="form-label mt-5 mb-3">Votre Email</label>
        <input type="email" name="_username" id="username" class="form-control mb-3" value="{{ last_email }}" required>

        <label for="password" class="form-label mb-3">Votre mot de passe</label>
        <div class="input-group">
            <input type="password" name="_password" id="user_password" class="form-control" required>
            <span role="button" class="input-group-text" onClick="togglePassword()">                
                <i class="bi bi-eye" id="eye"></i>
                <i class="bi bi-eye-slash d-none" id="eye-slash"></i>
            </span>
        </div>

        <input type="hidden" name="_target_path" value="/">

        <input type="submit" value="Connexion" class="btn btn-primary mt-3 mb-5">

    </form>


{% endblock %}
